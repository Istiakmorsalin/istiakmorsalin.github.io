---
import BaseLayout from "../layouts/BaseLayout.astro";
import Section from "../components/Section.astro";

const projects = [
  {
    name: "MULISA (Healthcare Information System)",
    desc: "Flutter mobile app + Django backend stack for healthcare workflows, offline-first capabilities, and ML integration.",
    tags: ["Flutter", "Django", "REST", "Offline-first"]
  },
  {
    name: "WebGPU-Accelerated BERT-Inspired Inference",
    desc: "Browser-based ML inference acceleration with GPU-optimized matrix computation and model simplifications.",
    tags: ["WebGPU", "TensorFlow.js", "Optimization"]
  },
  {
    name: "Warehouse Simulation (AnyLogic)",
    desc: "AI-powered warehouse logistics simulation to analyze cycle time, throughput, and resource utilization.",
    tags: ["AnyLogic", "Simulation", "Monte Carlo"]
  },
  {
    name: "GraphDPR (Privacy Policy Analysis)",
    desc: "Framework using knowledge graphs and topic modeling to compare and analyze privacy policies across regulations.",
    tags: ["Knowledge Graphs", "Topic Modeling", "NLP"]
  },
  {
    name: "Production Mobile Systems (PayPay / Deriv GO / Snack)",
    desc: "High-impact mobile engineering across payments, trading, and investment products serving millions of users.",
    tags: ["iOS", "Android", "Flutter", "CI/CD"]
  }
];
---
<BaseLayout title="Projects â€” Md Istiak Morsalin">
  <h1 class="mt-8 text-3xl font-semibold tracking-tight text-brand-900">Projects</h1>
  <p class="mt-3 text-slate-700 max-w-3xl">
    A curated selection of research and engineering projects. (We can later split these into individual project pages.)
  </p>

  <Section title="Featured">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
      {projects.map((p) => (
        <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-soft">
          <h3 class="font-semibold text-slate-900">{p.name}</h3>
          <p class="mt-2 text-sm text-slate-700">{p.desc}</p>
          <div class="mt-4 flex flex-wrap gap-2">
            {p.tags.map((t) => (
              <span class="text-xs font-medium rounded-full border border-brand-200 bg-brand-50 px-3 py-1 text-brand-900">{t}</span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </Section>
</BaseLayout>
